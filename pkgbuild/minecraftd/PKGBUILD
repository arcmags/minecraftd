# extra-x86_64-build -- -I <minecraft-server-jar pkg> -I <jre-openjdk-headless pkg>

package() {
    #make -C "${srcdir}/minecraftd-${pkgver}" PREFIX="${pkgdir}" install
    make -C "${srcdir}/minecraftd" PREFIX="${pkgdir}" install
}

